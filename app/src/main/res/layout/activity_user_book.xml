<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ScrollView
            android:id="@+id/scrollView3"
            android:layout_width="414dp"
            android:layout_height="593dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="monospace"
                    android:text="Book an Appointment"
                    android:textSize="24sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="52dp"
                    android:layout_marginTop="40dp"
                    android:fontFamily="monospace"
                    android:text="Choose your reason"
                    android:textColor="#795548"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView7" />

                <Spinner
                    android:id="@+id/spinReason"
                    android:layout_width="314dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="27dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="16dp"
                    android:background="#F3EBEB"
                    android:contentDescription="choose a reason"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.412"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView8"
                    tools:ignore="DuplicateSpeakableTextCheck,SpeakableTextPresentCheck,TouchTargetSizeCheck" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="52dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="monospace"
                    android:text="Choose a Venue"
                    android:textColor="#795548"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/spinReason" />

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="52dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="monospace"
                    android:text="Choose a Date and Time"
                    android:textColor="#795548"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/spinVenue" />

                <Spinner
                    android:id="@+id/spinVenue"
                    android:layout_width="314dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="52dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="33dp"
                    android:background="#F3EBEB"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.055"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView9"
                    tools:ignore="SpeakableTextPresentCheck" />

                <Button
                    android:id="@+id/btnBook2"
                    android:layout_width="201dp"
                    android:layout_height="51dp"
                    android:layout_marginStart="107dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginEnd="106dp"
                    android:text="BOOK!"
                    android:textColorLink="@color/teal_700"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/spinTime" />

                <Spinner
                    android:id="@+id/spinTime"
                    android:layout_width="203dp"
                    android:layout_height="43dp"
                    android:layout_marginTop="12dp"
                    app:layout_constraintEnd_toEndOf="@+id/tvTimePicker"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/tvTimePicker"
                    app:layout_constraintTop_toBottomOf="@+id/tvTimePicker"
                    tools:ignore="TouchTargetSizeCheck" />

                <TextView
                    android:id="@+id/tvTimePicker"
                    android:layout_width="203dp"
                    android:layout_height="36dp"
                    android:layout_marginStart="52dp"
                    android:layout_marginTop="15dp"
                    android:background="#F3EBEB"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView14" />

                <Button
                    android:id="@+id/btnTimePicker"
                    android:layout_width="95dp"
                    android:layout_height="52dp"
                    android:layout_marginStart="28dp"
                    android:text="Select"
                    app:layout_constraintBottom_toBottomOf="@+id/tvTimePicker"
                    app:layout_constraintStart_toEndOf="@+id/tvTimePicker"
                    app:layout_constraintTop_toTopOf="@+id/tvTimePicker"
                    app:layout_constraintVertical_bias="0.187" />

                <TextView
                    android:id="@+id/tvBookingName"
                    android:layout_width="202dp"
                    android:layout_height="29dp"
                    android:layout_marginStart="69dp"
                    android:layout_marginTop="9dp"
                    android:text="TextView"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView7" />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="412dp"
            android:layout_height="83dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/scrollView3">

            <Button
                android:id="@+id/btnHome"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:text="Cancel"
                tools:ignore="TouchTargetSizeCheck" />

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>